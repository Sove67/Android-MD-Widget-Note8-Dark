<resources>

    <style name="Scrollable" parent="android:Widget">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:clipChildren">true</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
        <item name="android:listSelector">@color/transparent</item>
        <item name="android:scrollbars">vertical</item>
    </style>

    <style name="Text" parent="android:Widget">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textAppearance">@android:style/TextAppearance.DeviceDefault</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHighlight">@color/transparent</item>
        <item name="android:textColorLink">@drawable/file_link</item>
        <item name="android:linksClickable">true</item>
        <item name="android:text">@string/line_text_placeholder</item>
    </style>

</resources>